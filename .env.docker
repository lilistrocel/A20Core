# A20Core Docker Environment Configuration
# Copy this file to .env and customize for your environment

# ===================================
# Database Configuration
# ===================================
DB_NAME=a20core_hub
DB_USER=postgres
DB_PASSWORD=postgres
DB_PORT=5432

# PostgreSQL authentication method
# Options: trust, scram-sha-256, md5
POSTGRES_HOST_AUTH_METHOD=scram-sha-256

# ===================================
# Hub Service Configuration
# ===================================
NODE_ENV=production
PORT=3000

# JWT Secret - CHANGE THIS IN PRODUCTION!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change-this-in-production-use-random-secret

# ===================================
# Processing Intervals (milliseconds)
# ===================================
# How often to process event queue
EVENT_PROCESSING_INTERVAL=5000

# How often to refresh materialized views
MATERIALIZED_VIEW_REFRESH=300000

# ===================================
# Logging
# ===================================
LOG_LEVEL=info

# ===================================
# Dashboard Configuration
# ===================================
DASHBOARD_PORT=8080
# API URL for dashboard (production - use Hub service name)
VITE_API_URL=http://localhost:3000

# ===================================
# pgAdmin Configuration (Optional)
# ===================================
PGADMIN_EMAIL=admin@a20core.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ===================================
# Docker-specific Settings
# ===================================
# Compose project name (affects container names)
COMPOSE_PROJECT_NAME=a20core
