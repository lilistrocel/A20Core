{
  "name": "a20core-hub",
  "version": "1.0.0",
  "description": "Central Hub for A20 Core microservices architecture",
  "main": "hub/server.js",
  "scripts": {
    "start": "node hub/server.js",
    "dev": "nodemon hub/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "db:init": "psql -U postgres -f database/schemas/01_core_tables.sql && psql -U postgres -f database/schemas/02_flexible_data_storage.sql",
    "db:migrate": "node database/migrations/run.js",
    "db:seed": "node database/seeds/run.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\""
  },
  "keywords": [
    "microservices",
    "api-gateway",
    "hub",
    "orchestration"
  ],
  "author": "A20 Core Team",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
